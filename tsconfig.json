//refactored
{
  "compilerOptions": {
    "target": "esnext",             // Target the latest ECMAScript version
    "module": "commonjs",           // Use CommonJS module system
    "moduleResolution": "node",     // Use Node.js module resolution strategy
    "outDir": "dist",               // Redirect output structure to the dist directory
    "rootDir": "src",               // Specify the root directory of input files
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Enable esModuleInterop for compatibility with ES6 modules
    "skipLibCheck": true,           // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure file casing is consistent
    "lib": ["esnext"],              // Use the latest ECMAScript library
    "sourceMap": true,              // Generate corresponding .map files
    "resolveJsonModule": true,      // Allow importing JSON modules
    "noImplicitAny": true,          // Enable noImplicitAny for better type safety
    "noUnusedLocals": true,         // Report errors on unused local variables
    "noUnusedParameters": true,     // Report errors on unused parameters
    "noImplicitReturns": true,      // Report errors for functions that don't return all code paths
    "noFallthroughCasesInSwitch": true  // Report errors for fallthrough cases in switch statements
  },
  "include": ["src/**/*"],           // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
